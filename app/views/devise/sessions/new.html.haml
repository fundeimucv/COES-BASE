.offcanvas-header
  %h5#offcanvasEndLabel
    .input-group-prepend
      %span.mb-0.fs-1 üëã
      %h3.text-center Inicio de Sesi√≥n
  %button.btn-close.text-reset{"aria-label" => "Close", "data-bs-dismiss" => "offcanvas", type: "button"}
.offcanvas-body

  = form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f|
    .p-3
      - if false
        / Email
        .mb-4
          %label.form-label{:for => "InputEmail"} Correo electr√≥nico *
          .input-group.input-group-lg
            %span.input-group-text.bg-light.border-0.text-secondary
              %i.fas.fa-envelope
            %input#InputEmail.form-control.border-0.bg-light.rounded-end.ps-1{placeholder: "mail@example.com", type: :email, name: "user[email]", required: true, autofocus: true}

      / CI
      .mb-2
        %label.form-label{:for => "inputCi"} C√©dula de Identidad *
        .input-group.input-group-lg{required: true}
          %span.input-group-text.bg-light.rounded-0.border-0.text-secondary
            %i.fas.fa-id-card
          %input#inputCi.form-control.border-0.bg-light.rounded-0.ps-1{type: :text, name: "user[ci]", required: true, autofocus: true, oninput: "$(this).val($(this).val().replace(/[^0-9]/g, ''))"}

      / Password
      .mb-2
        %label.form-label{:for => "inputPassword5"} Contrase√±a *
        .input-group.input-group-lg
          %span.input-group-text.bg-light.border-0.text-secondary
            %i.fas.fa-lock
          %input#inputPassword5.form-control.border-0.bg-light.rounded-0.ps-1{placeholder: "Contrase√±a", type: :password, name: 'user[password]', required: true}
          %button.btn.btn-outline-secondary{type: "button", onclick: "togglePassword()", tabindex: "-1"}
            %i.fas.fa-eye{:id => "togglePasswordIcon"}          
      / Check box

      - if devise_mapping.rememberable?
        .input-group-text.my-3.border-0.rounded-0
          %input#check1.rounded-0.btn.btn-outline-info.form-control.border-info.form-check-input.optional.border-0{type: :checkbox, name: 'user[remember_me]'}
          %label.form-check-label.ms-2{for: "check1"} Recu√©rdame

      / Button
      .align-items-center.mt-0
        .d-grid
          %button.btn.btn-primary.mb-0.rounded-0{type: :submit} Entrar
      .mt-4.text-center.mb-4        
        .text-primary-hover
          = link_to "Recuperar contrase√±a", new_user_password_path, class: 'btn btn-sm btn-outline-warning rounded-0'

:javascript
  function togglePassword() {
    var input = document.getElementById('inputPassword5');
    var icon = document.getElementById('togglePasswordIcon');
    if (input.type === "password") {
      input.type = "text";
      icon.classList.remove('fa-eye');
      icon.classList.add('fa-eye-slash');
    } else {
      input.type = "password";
      icon.classList.remove('fa-eye-slash');
      icon.classList.add('fa-eye');
    }
  }