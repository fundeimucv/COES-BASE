-# frozen_string_literal: true
= simple_form_for(@study_plan) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :code
    = f.input :name
    = f.association :school

  .form-actions
    = f.button :submit
